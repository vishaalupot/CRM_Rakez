@model CRM_Raviz.Models.RecordData

@{
    ViewBag.Title = "CRMPPF";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>Master Report</title>
    <style>
        /* CSS for styling */
        .heading {
            font-family: 'Jaldi', sans-serif;
            font-size: 38px;
            margin-bottom: 20px;
            text-align: left;
            font-weight: 600;
            color: #082948;
        }

        .form-control {
            width: 200px;
        }

        #endDateContainer {
            display: none;
        }

        .container1 {
            display: flex;
            align-items: flex-start;
            margin-bottom: 20px;
            flex-direction: column;
        }

        .date-input {
            margin-right: 10px;
        }

        .body {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .submit-button {
            margin-top: 20px;
            background: #082948;
        }

            .submit-button:hover {
                margin-top: 20px;
                background: #082948;
            }
    </style>
</head>
<body>
    <h1 class="heading">Master Report</h1>

    <div class="container1" style="display: flex; flex-wrap: wrap;">
        @using (Html.BeginForm("DownloadRecordCases", "Home", FormMethod.Get))
        {
            <div style="display: flex; flex-wrap: wrap; flex: 1;">

                

                <div id="callbackDateInput" style="display: none; margin-right: 10px;">
                    <label for="CallbackDate">Callback Date</label>
                    <input type="date" id="CallbackDate" class="form-control" />
                </div>

                <div style="margin-right: 10px; display: none;" id="SubDisposition">
                    <label for="SubDispo">Sub Disposition</label>
                    @Html.DropDownList("SubDisposition", new List<SelectListItem>
                    {
                         new SelectListItem { Text = "NA", Value = "NA" },
                         new SelectListItem { Text = "English", Value = "English" },
                         new SelectListItem { Text = "Arabic", Value = "Arabic" },
                         new SelectListItem { Text = "Hindi", Value = "Hindi" },
                    }, new { @class = "form-control box dropdown-styled" })
                </div>

                <div style="margin-right: 10px">
                    <label for="SubDispo">Date</label>

                    <input type="date" class="form-control box dropdown-styled date-input" placeholder="Select a date" name="specificDate">
                </div>

                <div style="margin-right: 10px; justify-content: center; display: flex; align-items: center;">
                    <label>
                        <input type="checkbox" id="showEndDate" name="showEndDate" /> Date Range
                    </label>
                </div>

                <div id="endDateContainer" style="margin-right: 10px">
                    <label for="SubDispo">End Date</label>
                    <input type="date" class="form-control box dropdown-styled date-input" placeholder="Select end date" name="endDate">
                </div>

            </div>
            <button type="submit" class="btn submit-button" style="margin-right: 10px">Submit</button>


        }
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function showCallbackDateInput() {
            var disposition = document.getElementById("Disposition").value;
            var callbackDateInput = document.getElementById("callbackDateInput");
            var Subdispo = document.getElementById("SubDisposition");

            // If the selected disposition is either callback or callback language, show the callback date input
            if (disposition === "CALLBACK" || disposition === "CALLBACK LANGUAGE") {
                callbackDateInput.style.display = "block";
            } else {
                callbackDateInput.style.display = "none";
            }

            if (disposition === "CALLBACK LANGUAGE") {
                Subdispo.style.display = "block";
            } else {
                Subdispo.style.display = "none";
            }
        }
    </script>
    <script>
        $(document).ready(function () {
            $('#showEndDate').change(function () {
                $('#endDateContainer').toggle();
            });


        });
    </script>
</body>
</html>
